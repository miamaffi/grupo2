<!DOCTYPE html>
<html lang="es">
  <!-- Head -->
  <%- include('partials/head') %>
  <body>
    <% if (locals.user != undefined) { %>
      <%- include('./partials/headerLogueado') %>
    <% } else { %>
      <%- include('./partials/header') %>
    <% } %>
    <!-- Contenedor principal -->
    <div class="container products-wrapper">
      <h2 class="products-title">Editar producto</h2>

      <!-- Formulario de edici贸n -->
      <!-- Usamos product.id para identificar el producto -->
      <form action="/products/<%= product.id %>/update" method="POST">
        
        <!-- Imagen -->
        <div class="mb-3">
          <label for="image">Imagen (URL)</label>
          <input 
            type="text" 
            id="image" 
            name="image" 
            class="form-input" 
            value="<%= product.imageFilename %>">
        </div>

        <!-- Nombre -->
        <div class="mb-3">
          <label for="name">Nombre</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            class="form-input" 
            value="<%= product.name %>">
        </div>

        <!-- Descripci贸n -->
        <div class="mb-3">
          <label for="description">Descripci贸n</label>
          <textarea 
            id="description" 
            name="description" 
            class="form-input"><%= product.description %></textarea>
        </div>

        <!-- Bot贸n guardar cambios -->
        <button type="submit" class="buy-now-button">GUARDAR CAMBIOS</button>
      </form>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
