<!DOCTYPE html>
<html lang="es">

  <%- include('./partials/head') %>

  <body>
    <% if (locals.user != undefined) { %>
      <%- include('./partials/headerLogueado') %>
    <% } else { %>
      <%- include('./partials/header') %>
    <% } %>
    <main>
      <section class="info-user container products-wrapper">
        <div class="row justify-content-center">
          <div class="col-12 col-md-8">
            <h1 class="main-title text-center mb-4">Editar perfil</h1>
              <form class="form">
              <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input 
                  id="nombre" 
                  type="text" 
                  name="nombre" 
                  value="<%= datos.nombre %>" 
                  placeholder="Ingrese su nombre" 
                  required>
              </div>

              <div class="form-group">
                <label for="email">Email:</label>
                <input 
                  id="email" 
                  type="email" 
                  name="email" 
                  value="<%= datos.email %>"  
                  placeholder="Ingrese su email" 
                  required>
              </div>

              <div class="form-group">
                <label for="clave">Clave:</label>
                <input 
                  id="clave" 
                  type="password" 
                  name="clave" 
                  value=""  
                  placeholder="Ingrese su clave" 
                  required>
              </div>

              <div class="form-group">
                <label for="fotoPerfil">Foto de perfil:</label>
                <input 
                  id="fotoPerfil" 
                  type="text" 
                  name="fotoPerfil" 
                  value="<%= datos.fotoPerfil %>" 
                  placeholder="Suba su foto de perfil">
              </div>
              <div class="text-center">
                <a href="/users/me/id/<%= datos.id %>" class="btn mt-3">Enviar</a>
              </div>
            </form>
          </div>
        </div>
      </section>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
