<!DOCTYPE html>
<html lang="es">
  <!-- head común -->
  <%- include('partials/head') %>
<body>
  <!-- header común -->
  <% if (logueado) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
  <% } %>

  <!-- detalle de producto -->
  <div class="container products-wrapper">
    <div class="d-flex align-items-center">
      <!-- título con el nombre del producto -->
      <h2 class="products-title"><%= product.nombre %></h2>

      <!-- enlace para editar (ruta de ejemplo) -->
      <p class="product-detail-description" style="margin-left: 1rem;">
        <a href="/products/<%= product.id %>/productEdit">Editar</a>
      </p>
    </div>
    <div class="product-detail">
      <div class="row">
        <!-- columna con imagen y descripción -->
        <article class="col-12 col-lg-8 product-detail-info">
          <!-- imagen del producto -->
          <img src="<%= product.imagen %>" alt="<%= product.nombre %>" class="product-detail-img">
          <!-- descripción del producto -->
          <p class="product-detail-description">
            <%= product.descripcion %>
          </p>
        </article>
        <!-- columna con comentarios y formulario -->
        <div class="col-12 col-lg-4">
          <section class="comments">
            <!-- recorro los comentarios del producto -->
            <% 
            for (let i = 0; i < product.comentarios.length; i++) { 
             let c = product.comentarios[i]; 
              %>
              <article>
              <img src="<%= c.imagenPerfil %>" alt="<%= c.nombreUsuario %>">
              <div class="data">
              <p class="user">
               <strong><a href="/users/me"><%= c.nombreUsuario %>:</a></strong>
             <%= c.texto %>
              </p>
              </div>
              </article>
            <% } %> 
          </section>
          <form class="form" action="/products/<%= product.id %>" method="GET">  
            <input class="form-input" type="text" name="body" placeholder="Agregar comentario">
            <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
          </form>
          <hr>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
</body> 
</html>


	