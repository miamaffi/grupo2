<!DOCTYPE html>
<html lang="es">
  <!-- head común -->
  <%- include('partials/head') %>
<body>
  <!-- header común -->
  <% if (logueado) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
  <% } %>

  <!-- Datos del user -->
  <section class="info-user container products-wrapper">
    <div class="row">
      <div class="img-container offset-3 col-2">
        <!-- foto de perfil del user -->
        <img src="<%= user.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
      </div>

      <div class="data-container col-6">
        <div class="d-flex align-items-center">
          <!-- nombre de user -->
          <h1 class="main-title"><%= user.usuario %></h1>
          <a class="btn mt-3 ml-4" href="#">SEGUIR</a>
        </div>
        <ul>
          <!-- email -->
          <li><%= user.email %></li>
        </ul>
      </div>
    </div>
  </section>
  <!-- /Datos del user -->

  <!-- Mis productos (mostramos el catálogo porque no hay userId en cada producto) -->
  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Mis productos</h2>
      </div>

      <% productos.forEach(function(p){ %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/<%= p.id %>">
              <figure class="product-box_image">
                <img src="<%= p.imagen %>" alt="<%= p.nombre %>">
              </figure>
              <article class="product-box_data">
                <h2><%= p.nombre %></h2>
                <p><%= p.descripcion %></p>
                <p>Comentarios: <%= p.comentarios.length %></p>
              </article>
            </a>
          </section>
        </div>
      <% }) %>
    </div>
  </div>
  <!-- /Mis productos -->

  <!-- footer común -->
  <%- include('partials/footer') %>
</body>
</html>
